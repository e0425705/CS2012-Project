[Shops](sid*, name);
[Products](pid*, name, description);
[Manufacturers](mid*, name, country);
[Category](cid*, name);
[Users](uid*, name, address);
[Coupons](batch_number*, reward, validity_period);
[Employees](eid*, name, monthly_salary);
[Complaints](complain_id*, details, status);

<makes>();
Products ==> makes;
Manufacturers --- makes;

[<sells>](quantity, price);
Shops --- sells;
Products --- sells;

<belongsTo>();
Products ==> belongsTo;
Category --- belongsTo;

<parentCategory>();
Category --> parentCategory[child];
Category --- parentCategory[parent];

[<orders>](oid*, hasCoupon, status, delivery_date, shipping_cost, address, total_cost, quantity);
sells --- orders;
Users --- orders;

<reviews>(ratings, comment);
Users --- reviews;
orders --> reviews;

[<rewarded>]();
Users --- rewarded;
Coupons --- rewarded;

<applied>();
orders --> applied;
rewarded --> applied;

<refunds>(quantity, date, status, reason);
Employees --- refunds;
orders --- refunds;

<files_complaint>();
Employees --- files_complaint;
Complaints ==> files_complaint;
Users --- files_complaint;

[order_complaint](oid);
[shop_complaint](sid);
[user_complaint](uid);

Complaints ==> {order_complaint, shop_complaint, user_complaint};
